	bool "support Intel FPR"
	default n

config FBOBMC_IMG_LAYOUT_VER
	int "fb-obmc image layout version"
	default 0
	range 0 1

config ASPEED_WRITE_DEFAULT_ENV
	bool "Enable write default environment"
	default n

