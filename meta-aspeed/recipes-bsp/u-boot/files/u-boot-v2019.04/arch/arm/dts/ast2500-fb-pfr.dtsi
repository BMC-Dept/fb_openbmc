/dts-v1/;

#include <dt-bindings/gpio/aspeed-gpio.h>
#include <dt-bindings/wdt/aspeed.h>
#include "ast2500-u-boot.dtsi"

/*
Currently the DRAM, UART, WDT and MAC are setup in platform.S
during lowlevel_init so this dts is empty. need add configuration
when we fully migrate from ast-sdk to upstream u-boot
*/
/ {
	aliases {
		spi0 = &fmc;
	};
};

&fmc {
	status = "okay";
	flash@0 {
		compatible = "spi-flash";
		status = "okay";
		spi-max-frequency = <50000000>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;
	};
};

&wdt1 {
	u-boot,dm-pre-reloc;
	wdtrst = <WDTRST_POLARITY_H WDTRST_OPEN_DRAIN 0xFF>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_wdtrst1_default>;
};

&i2c {
	u-boot,dm-pre-reloc;
};

&i2c4 {
	status = "okay";
	u-boot,dm-pre-reloc;
	/* TODO: Add PFR I2C device*/
};
