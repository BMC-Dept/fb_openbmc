---
 configurations/yosemite4_sentineldome.json |  5 +++--
 configurations/yosemite4_wailuafalls.json  | 15 +++++++++------
 2 files changed, 12 insertions(+), 8 deletions(-)

diff --git a/configurations/yosemite4_sentineldome.json b/configurations/yosemite4_sentineldome.json
index c55e476..8722633 100644
--- a/configurations/yosemite4_sentineldome.json
+++ b/configurations/yosemite4_sentineldome.json
@@ -1,8 +1,9 @@
 {
     "Exposes": [
         {
-            "Address": "0x20",
-            "Bus": "$bus % 16",
+            "Address": ["7", "236", "128", "1", "0", "$bus % 16 * 5"],
+            "Bus": "$bus / 4 - 4",
+            "Class": "I3C",
             "EndpointId": "$bus % 15 * 10",
             "Name": "BIC",
             "Type": "MCTPEndpoint"
