+#!/bin/bash
+
+enable_i3c_hub()
+{
+    lockfile="/tmp/i3c_hub.lock"
+    exec 200>"$lockfile"
+    flock 200
+
+    local plugged_slot="$1"
+    local hub_path
+    local offset_file
+    local access_file
+    local max_attempts=20
+    local attempt=1
+    local result
+    local current_port
+    local mask=1
+
+    if [ "$plugged_slot" -lt 5 ]; then
+        hub_path="/sys/kernel/debug/i3c-hub-0-*/reg"
+        echo "Slot $plugged_slot on i3c hub 0."
+    else
+        hub_path="/sys/kernel/debug/i3c-hub-1-*/reg"
+        echo "Slot $plugged_slot on i3c hub 1."
+    fi
+
+    for file in $hub_path/{offset,access}; do
+        if [[ $file == *"/offset" ]]; then
+            offset_file="$file"
+        elif [[ $file == *"/access" ]]; then
+            access_file="$file"
+        fi
+    done
+
+    while [ $attempt -le $max_attempts ]; do
+        result=$(i2ctransfer -y -f $((plugged_slot-1)) w1@0x24 0x00 r1)
+        if [ $(((result >> 1) & 1 )) -eq 1 ]; then
+            break
+        else
+            echo "BIC not ready, attemp ${attempt} times"
+            sleep 0.5
+            ((attempt++))
+        fi
+    done
+
+    if [ $attempt -gt $max_attempts ]; then
+        echo "Failed to get BIC ready after $max_attempts attempts."
+        exit 1
+    fi
+
+    echo "BIC ready"
+
+    # unlock
+    echo "Unlock"
+    echo 16 > "$offset_file"
+    echo 105 > "$access_file"
+
+    # read register 17
+    echo "Read register 17"
+    echo 17 > "$offset_file"
+    cat "$access_file"
+    # read register 23
+    echo "Read register 23"
+    echo 23 > "$offset_file"
+    cat "$access_file"
+
+    # enable
+    echo "Enable i3c port"
+    echo 18 > "$offset_file"
+    current_port=$(cat "$access_file")
+    echo "Current i3c port status = $current_port"
+    if [ "$plugged_slot" -gt 4 ]; then
+        ((plugged_slot=plugged_slot-4))
+    fi
+    mask=$((mask << (--plugged_slot)))
+    echo "Slot Mask = $mask"
+    current_port=$((current_port | mask))
+    echo "New i3c port status = $current_port"
+    echo $current_port > "$access_file"
+
+    # read register 0
+    echo "Read register 0"
+    echo 0 > "$offset_file"
+    cat "$access_file"
+    # read register 18
+    echo "Read register 18"
+    echo 18 > "$offset_file"
+    cat "$access_file"
+    # read register 25
+    echo "Read register 25"
+    echo 25 > "$offset_file"
+    cat "$access_file"
+    # read register 83
+    echo "Read register 83"
+    echo 83 > "$offset_file"
+    cat "$access_file"
+    # read register 121
+    echo "Read register 121"
+    echo 121 > "$offset_file"
+    cat "$access_file"
+
+    # Lock
+    echo "Lock"
+    echo 16 > "$offset_file"
+    echo 0 > "$access_file"
+
+    flock -u 200
+
+    exit 0
+}
+
+enable_i3c_hub "$1"
